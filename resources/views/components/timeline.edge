<div class="timeline mb-3">
  @each(t in data.sort((a, b) => new Date(a.date) - new Date(b.date)))
  <a href="/audiences/{{t.id}}">
    <div class="timeline-node">
      <span class="timeline-link"></span>
      <span class="timeline-pin {{html.classNames({ 'current': t.id == current }) }}"></span>
      <span class="label">{{t.date.replaceAll('-', '/')}}</span>
    </div>
  </a>
  @end
</div>